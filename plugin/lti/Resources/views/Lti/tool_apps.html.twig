{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}
{% block title %}
    {{ parent() ~ ' - ' ~ "ujm_lti_tool_apps" | trans({}, "lti") | striptags | raw }}
{% endblock %}

{% block breadcrumb %}
    {{
    macros.workspaceBreadcrumbs(
    workspace,
    [
    {
        'name': 'ujm_lti_tool_apps'|trans({}, 'lti'),
        'href': ''
    }
    ]
    )
    }}
{% endblock %}

{% block section_content %}

    <table class="table table-bordered">
        <tr>
            <th>{{ 'title' | trans({}, 'platform') }}</th>
            <th>{{ 'description' | trans({}, 'platform') }}</th>
            <th>{{ 'open_application'|trans({}, 'lti') }}</th>
            {% if workspaceManager == true %}
                <th>{{ 'publish'|trans({}, 'platform') }}</th>
            {% endif %}
        </tr>
        {% for app in apps %}
            <tr>
                <td>{{ app.title }}</td>
                <td>{{ app.description }}</td>
                <td>
                    <form id="form_app_{{ app.id }}" method="POST" target="lti" action="{{ printfTwig(app.url) }}">
                        {% for key,value in ltiDatas["app_"~app.id] %}
                            <input type="hidden" name="{{ key }}" value="{{ value }}">
                        {% endfor %}
                        <input type="hidden" name="oauth_signature" value="{{ signature["app_"~app.id] }}">
                        <button onclick="displayFrameLti()" type="submit" title="{{ 'open_application_in_the_same_window'|trans({}, 'lti') }}"><i class="fa fa-arrow-circle-up"></i></button>
                        <button onclick="targetApp('form_app_{{ app.id }}')" type="submit"  title="{{ 'open_application_in_a_new_window'|trans({}, 'lti') }}"><i class="fa fa-arrow-circle-up"></i></button>
                    </form>
                </td>
                {% if workspaceManager == true %}
                    <td>
                        {%  if published["app_"~app.id] == 0 %}
                            <a href="{{ path('ujm_lti_publish_app', { 'wsId': workspace.id, 'appId': app.id}) }}"><i class="fa fa-fw fa-share-square-o" title="{{ 'publish'|trans({}, 'platform') }}"></i></a>
                        {%  else %}
                            <a href="{{ path('ujm_lti_unpublish_app', { 'wsId': workspace.id, 'appId': app.id}) }}" style="color: red"><i class="fa fa-fw fa-share-square-o" title="{{ 'unpublish'|trans({}, 'platform') }}"></i></a>
                        {%  endif %}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
    <div id="frameLti" style="display: none">
        <iframe name="lti"  style="height: 700px; width: 100%"></iframe>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function displayFrameLti() {
            $("#frameLti").show();
        }
        function targetApp(form) {
            $("#"+form).attr('target', '_blank');
        }
    </script>
{% endblock %}